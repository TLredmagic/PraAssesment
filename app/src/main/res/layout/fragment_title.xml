<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.TitleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_persegi"
            android:layout_width="187dp"
            android:layout_height="58dp"
            android:layout_marginStart="162dp"
            android:layout_marginTop="246dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="32dp"
            android:text="Persegi Panjang"
            app:layout_constraintBottom_toTopOf="@+id/btn_segitiga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_segitiga"
            android:layout_width="187dp"
            android:layout_height="58dp"
            android:layout_marginStart="162dp"
            android:layout_marginTop="336dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="30dp"
            android:text="Segitiga"
            app:layout_constraintBottom_toTopOf="@+id/btn_about"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="187dp"
            android:layout_height="58dp"
            android:layout_marginStart="162dp"
            android:layout_marginTop="424dp"
